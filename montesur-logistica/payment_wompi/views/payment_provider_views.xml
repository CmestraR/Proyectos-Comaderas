<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payment_provider_form_inherit_payment_wompi" model="ir.ui.view">
        <field name="name">payment.provider.form.inherit.payment.wompi</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position='inside'>
                <group attrs="{'invisible': [('code', '!=', 'wompi')]}">
                    <field name="wompi_prod_merchant_id" options="{'no_create': True}"/>
                    <field name="wompi_test_merchant_id"/>
                </group>
            </group>
        </field>
    </record>
</odoo>
